<Window x:Class="FerreteriaPOS.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FerreteriaPOS.UI"
        xmlns:windows="clr-namespace:FerreteriaPOS.UI.Windows"
        xmlns:converters="clr-namespace:FerreteriaPOS.UI.Converters"
        mc:Ignorable="d"
        Title="Ferretería Las Naciones - Sistema POS" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded"
        PreviewKeyDown="Window_PreviewKeyDown">
    <Window.InputBindings>
        <KeyBinding Key="F10" Command="{Binding BuscarProductoCommand}"/>
    </Window.InputBindings>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Encabezado con logo y nombre -->
        <Border Grid.Row="0" Background="#003366" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="FERRETERÍA LAS NACIONES" 
                       Foreground="White" 
                       FontWeight="Bold" 
                       FontSize="18"/>
                <TextBlock Grid.Column="2" x:Name="txtUsuario" Text="Usuario: Admin" 
                       Foreground="White" 
                       VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Barra de navegación con botones de función -->
        <Border Grid.Row="1" Background="#F0F0F0" Padding="5" BorderBrush="#CCCCCC" BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <Button x:Name="btnF1Ventas" Content="F1 Ventas" Width="120" Height="40" Margin="5" 
                        Click="btnF1Ventas_Click" Background="#E6E6E6" IsEnabled="True"/>
                <Button x:Name="btnF2Clientes" Content="F2 Clientes" Width="120" Height="40" Margin="5" 
                        Click="btnF2Clientes_Click" Background="#E6E6E6"/>
                <Button x:Name="btnF3Productos" Content="F3 Productos" Width="120" Height="40" Margin="5" 
                        Click="btnF3Productos_Click" Background="#E6E6E6" IsEnabled="True"/>
                <Button x:Name="btnF4Inventario" Content="F4 Inventario" Width="120" Height="40" Margin="5" 
                        Click="btnF4Inventario_Click" Background="#E6E6E6" IsEnabled="False"/>
                <Button x:Name="btnF5Configuracion" Content="F5 Configuración" Width="120" Height="40" Margin="5" 
                        Click="btnF5Configuracion_Click" Background="#E6E6E6" IsEnabled="True"/>
            </StackPanel>
        </Border>

        <!-- Área de contenido principal - Contendrá los diferentes controles según la función -->
        <Grid Grid.Row="2" x:Name="contentArea">
            <!-- El contenido será reemplazado dinámicamente según la función seleccionada -->
            
            <!-- Contenido de Ventas -->
            <Grid x:Name="ventasContent" Visibility="Visible">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Header con información de la venta -->
                <Grid Grid.Row="0" Margin="10" Background="#F5F5F5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <TextBlock Text="Venta #" FontSize="16" FontWeight="Bold" VerticalAlignment="Center"/>
                        <TextBlock x:Name="txtNumeroVenta" Text="Nuevo" FontSize="16" Margin="5,0,0,0" VerticalAlignment="Center"/>
                        <CheckBox x:Name="chkEsFactura" Content="Es Factura" Margin="20,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <TextBlock Text="Cliente:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBlock x:Name="txtClienteSeleccionado" Text="(Sin cliente)" FontWeight="Bold" Foreground="DarkBlue" Width="200" VerticalAlignment="Center"/>
                        <Button x:Name="btnBuscarVentaCliente" Content="Buscar Cliente" Width="100" Margin="5,0,0,0" Click="btnBuscarVentaCliente_Click" FontWeight="Bold"/>
                    </StackPanel>
                </Grid>
                
                <!-- Barra de búsqueda de productos -->
                <Grid Grid.Row="1" Margin="10,0,10,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" Text="Código/Descripción:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBox Grid.Column="1" x:Name="txtBuscarVentaProducto" KeyDown="txtBuscarVentaProducto_KeyDown" Padding="5" Margin="0,0,10,0"/>
                    <Button Grid.Column="2" x:Name="btnBuscarVentaProducto" Content="Buscar F10" Click="btnBuscarVentaProducto_Click"/>
                </Grid>
                
                <!-- DataGrid para items de la venta -->
                <DataGrid Grid.Row="2" x:Name="dgVentaItems" AutoGenerateColumns="False" IsReadOnly="True"
                          Margin="10,0" AlternatingRowBackground="#F5F5F5"
                          CanUserAddRows="False" CanUserDeleteRows="False"
                          SelectionMode="Single" SelectionChanged="dgVentaItems_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Código" Binding="{Binding Producto.CodigoBarra}" Width="100"/>
                        <DataGridTextColumn Header="Descripción" Binding="{Binding Producto.Descripcion}" Width="*"/>
                        <DataGridTextColumn Header="Cantidad" Binding="{Binding Cantidad}" Width="80"/>
                        <DataGridTextColumn Header="Precio Unit." Binding="{Binding PrecioUnitario, StringFormat=C0}" Width="120"/>
                        <DataGridTextColumn Header="Subtotal" Binding="{Binding Subtotal, StringFormat=C0}" Width="120"/>
                        <DataGridTextColumn Header="Stock" Binding="{Binding Producto.Existencia}" Width="80"/>
                        <DataGridTemplateColumn Width="80">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Eliminar" Click="btnEliminarVentaItem_Click" Tag="{Binding}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
                
                <!-- Panel de subtotales -->
                <Grid Grid.Row="3" Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="1" Orientation="Vertical">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="120"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Subtotal:" FontWeight="Bold" HorizontalAlignment="Right" Margin="0,0,10,0"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" x:Name="txtVentaSubtotal" Text="$0" HorizontalAlignment="Right"/>
                            
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Total:" FontWeight="Bold" HorizontalAlignment="Right" Margin="0,5,10,0"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" x:Name="txtVentaTotal" Text="$0" FontWeight="Bold" HorizontalAlignment="Right"/>
                        </Grid>
                    </StackPanel>
                </Grid>
                
                <!-- Barra de botones de acción -->
                <Grid Grid.Row="4" Margin="10" Background="#E6E6E6">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button x:Name="btnNuevaVenta" Content="Nueva (F1)" Width="100" Click="btnNuevaVenta_Click" Margin="5"/>
                        <Button x:Name="btnGuardarVenta" Content="Guardar (F2)" Width="100" Click="btnGuardarVenta_Click" Margin="5"/>
                        <Button x:Name="btnHold" Content="Hold (F6)" Width="100" Click="btnHold_Click" Margin="5"/>
                        <Button x:Name="btnRecuperar" Content="Recuperar (F5)" Width="100" Click="btnRecuperar_Click" Margin="5"/>
                        <Button x:Name="btnEmitir" Content="Emitir (F12)" Width="100" Click="btnEmitir_Click" Margin="5"/>
                        <Button x:Name="btnArticuloComun" Content="Art. Común (CTRL+P)" Width="150" Click="btnArticuloComun_Click" Margin="5"/>
                    </StackPanel>
                </Grid>
                
                <!-- Barra de botones adicionales -->
                <Grid Grid.Row="5" Margin="10,0,10,10">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                        <Button x:Name="btnReimprimirTicket" Content="Reimprimir Último Ticket" Width="170" Click="btnReimprimirTicket_Click" Margin="5">
                            <Button.ContentTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="🖨️ " FontSize="14" VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding}" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </DataTemplate>
                            </Button.ContentTemplate>
                        </Button>
                        <Button x:Name="btnVentasDelDia" Content="Ventas del día y Devoluciones" Width="220" Click="btnVentasDelDia_Click" Margin="5">
                            <Button.ContentTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="📋 " FontSize="14" VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding}" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </DataTemplate>
                            </Button.ContentTemplate>
                        </Button>
                    </StackPanel>
                </Grid>
            </Grid>
            
            <!-- Contenido de Productos -->
            <Grid x:Name="productosContent" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Fila 0: Título y Acciones principales -->
                <Grid Grid.Row="0" Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <TextBlock Text="Catálogo de Productos" FontSize="18" FontWeight="Bold" VerticalAlignment="Center"/>
                        <TextBlock x:Name="txtProductCount" Text=" (0 items)" Margin="10,0,0,0" VerticalAlignment="Center" Foreground="Gray"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button Content="Nuevo" x:Name="btnNuevoProd" Width="80" Margin="0,0,10,0" Padding="5" Click="btnNuevoProd_Click"/>
                        <Button Content="Editar" x:Name="btnEditarProd" Width="80" Margin="0,0,10,0" Padding="5" Click="btnEditarProd_Click"/>
                        <Button Content="Eliminar" x:Name="btnEliminarProd" Width="80" Padding="5" Click="btnEliminarProd_Click"/>
                    </StackPanel>
                </Grid>
                
                <!-- Fila 1: Búsqueda y filtros -->
                <Grid Grid.Row="1" Margin="10,0,10,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBox Grid.Column="0" x:Name="txtBuscarProd" Padding="5" 
                             ToolTip="Buscar por código, descripción o categoría"
                             TextChanged="txtBuscarProd_TextChanged"/>
                    
                    <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="10,0,0,0">
                        <Button Content="Refrescar" x:Name="btnRefrescarProd" Width="80" Margin="0,0,10,0" Padding="5" Click="btnRefrescarProd_Click"/>
                        <Button Content="Importar Excel" x:Name="btnImportarExcelProd" Width="100" Padding="5" Click="btnImportarExcelProd_Click"/>
                    </StackPanel>
                </Grid>
                
                <!-- Fila 2: DataGrid de Productos -->
                <DataGrid x:Name="dgProductos" Grid.Row="2" Margin="10" 
                          AutoGenerateColumns="False" 
                          IsReadOnly="True"
                          AlternatingRowBackground="LightGray"
                          SelectionMode="Single"
                          BorderThickness="1"
                          BorderBrush="Gray"
                          VerticalGridLinesBrush="LightGray"
                          HorizontalGridLinesBrush="LightGray"
                          CanUserSortColumns="True"
                          CanUserResizeColumns="True"
                          CanUserResizeRows="False"
                          CanUserReorderColumns="True"
                          MouseDoubleClick="dgProductos_MouseDoubleClick">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Código" Binding="{Binding CodigoBarra}" Width="100"/>
                        <DataGridTextColumn Header="Descripción" Binding="{Binding Descripcion}" Width="*"/>
                        <DataGridTextColumn Header="Precio Público" Binding="{Binding PrecioPublico, StringFormat='${0:#,##0}'}" Width="120"/>
                        <DataGridTextColumn Header="Precio Mayoreo" Binding="{Binding PrecioMayoreo, StringFormat='${0:#,##0}'}" Width="120"/>
                        <DataGridTextColumn Header="Existencia" Binding="{Binding Existencia}" Width="80"/>
                        <DataGridTextColumn Header="Stock Mínimo" Binding="{Binding MinStock}" Width="100"/>
                        <DataGridTextColumn Header="Departamento" Binding="{Binding Departamento}" Width="120"/>
                        <DataGridTextColumn Header="Proveedor" Binding="{Binding Proveedor}" Width="120"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
            
            <!-- Contenido de Clientes -->
            <Grid x:Name="clientesContent" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Fila 0: Título y Acciones principales -->
                <Grid Grid.Row="0" Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <TextBlock Text="Catálogo de Clientes" FontSize="18" FontWeight="Bold" VerticalAlignment="Center"/>
                        <TextBlock x:Name="txtClienteCount" Text=" (0 items)" Margin="10,0,0,0" VerticalAlignment="Center" Foreground="Gray"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button Content="Nuevo" x:Name="btnNuevoCliente" Width="80" Margin="0,0,10,0" Padding="5" Click="btnNuevoCliente_Click"/>
                        <Button Content="Editar" x:Name="btnEditarCliente" Width="80" Margin="0,0,10,0" Padding="5" Click="btnEditarCliente_Click"/>
                        <Button Content="Eliminar" x:Name="btnEliminarCliente" Width="80" Padding="5" Click="btnEliminarCliente_Click"/>
                    </StackPanel>
                </Grid>
                
                <!-- Fila 1: Búsqueda -->
                <Grid Grid.Row="1" Margin="10,0,10,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBox Grid.Column="0" x:Name="txtBuscarCliente" Padding="5" 
                             ToolTip="Buscar por RUT o nombre"
                             TextChanged="txtBuscarCliente_TextChanged"/>
                    
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button Content="Refrescar" x:Name="btnRefrescarCliente" Width="80" Margin="10,0,10,0" Padding="5" Click="btnRefrescarCliente_Click"/>
                        <Button Content="Importar Excel" x:Name="btnImportarExcelCliente" Width="100" Padding="5" Click="btnImportarExcelCliente_Click"/>
                    </StackPanel>
                </Grid>
                
                <!-- Fila 2: DataGrid de Clientes -->
                <DataGrid x:Name="dgClientes" Grid.Row="2" Margin="10" 
                          AutoGenerateColumns="False" 
                          IsReadOnly="True"
                          AlternatingRowBackground="LightGray"
                          SelectionMode="Single"
                          BorderThickness="1"
                          BorderBrush="Gray"
                          VerticalGridLinesBrush="LightGray"
                          HorizontalGridLinesBrush="LightGray"
                          CanUserSortColumns="True"
                          CanUserResizeColumns="True"
                          CanUserResizeRows="False"
                          CanUserReorderColumns="True"
                          MouseDoubleClick="dgClientes_MouseDoubleClick">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="RUT" Binding="{Binding Rut}" Width="120"/>
                        <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="*"/>
                        <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="200"/>
                        <DataGridTextColumn Header="Teléfono" Binding="{Binding Telefono}" Width="120"/>
                        <DataGridTemplateColumn Header="Acciones" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Historial" 
                                            Click="btnHistorial_Click" 
                                            Tag="{Binding}" 
                                            Margin="3" 
                                            Padding="5,2"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
            
            <!-- Contenido de Configuración -->
            <Grid x:Name="configuracionContent" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Encabezado -->
                <Border Grid.Row="0" Background="#003366" Padding="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Text="CONFIGURACIÓN" Grid.Column="0" 
                                  FontWeight="Bold" FontSize="16" Foreground="White"
                                  VerticalAlignment="Center" Margin="10,5"/>
                    </Grid>
                </Border>
                
                <!-- Contenido principal -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="0,10">
                        <!-- General -->
                        <Border Background="#003366" Margin="0,10,0,0">
                            <TextBlock Text="General" FontWeight="Bold" FontSize="16" 
                                      Foreground="White" Margin="10,5"/>
                        </Border>
                        
                        <WrapPanel Margin="10">
                            <Button x:Name="btnOpcionesGenerales" Width="120" Height="100" Margin="10"
                                   BorderThickness="1" BorderBrush="#CCCCCC" Background="White"
                                   Click="btnOpcionesGenerales_Click">
                                <StackPanel>
                                    <TextBlock Text="⚙️" FontSize="24" HorizontalAlignment="Center" 
                                              VerticalAlignment="Top" Margin="0,15,0,5"/>
                                    <TextBlock Text="Opciones Habilitadas" TextAlignment="Center" 
                                              TextWrapping="Wrap" VerticalAlignment="Bottom" Margin="0,5,0,10"/>
                                </StackPanel>
                            </Button>
                            
                            <Button x:Name="btnBaseDatos" Width="120" Height="100" Margin="10"
                                   BorderThickness="1" BorderBrush="#CCCCCC" Background="White"
                                   Click="btnBaseDatos_Click">
                                <StackPanel>
                                    <TextBlock Text="🗃️" FontSize="24" HorizontalAlignment="Center" 
                                              VerticalAlignment="Top" Margin="0,15,0,5"/>
                                    <TextBlock Text="Base de Datos" TextAlignment="Center" 
                                              TextWrapping="Wrap" VerticalAlignment="Bottom" Margin="0,5,0,10"/>
                                </StackPanel>
                            </Button>
                        </WrapPanel>
                        
                        <!-- Personalización -->
                        <Border Background="#003366" Margin="0,10,0,0">
                            <TextBlock Text="Personalización" FontWeight="Bold" FontSize="16" 
                                      Foreground="White" Margin="10,5"/>
                        </Border>
                        
                        <WrapPanel Margin="10">
                            <Button x:Name="btnTickets" Width="120" Height="100" Margin="10"
                                   BorderThickness="1" BorderBrush="#CCCCCC" Background="White"
                                   Click="btnTickets_Click">
                                <StackPanel>
                                    <TextBlock Text="🧾" FontSize="24" HorizontalAlignment="Center" 
                                              VerticalAlignment="Top" Margin="0,15,0,5"/>
                                    <TextBlock Text="Ticket" TextAlignment="Center" 
                                              TextWrapping="Wrap" VerticalAlignment="Bottom" Margin="0,5,0,10"/>
                                </StackPanel>
                            </Button>
                        </WrapPanel>
                        
                        <!-- Dispositivos -->
                        <Border Background="#003366" Margin="0,10,0,0">
                            <TextBlock Text="Dispositivos" FontWeight="Bold" FontSize="16" 
                                      Foreground="White" Margin="10,5"/>
                        </Border>
                        
                        <WrapPanel Margin="10">
                            <Button x:Name="btnImpresoraTermica" Width="120" Height="100" Margin="10"
                                   BorderThickness="1" BorderBrush="#CCCCCC" Background="White"
                                   Click="btnImpresoraTermica_Click">
                                <StackPanel>
                                    <TextBlock Text="🖨️" FontSize="24" HorizontalAlignment="Center" 
                                              VerticalAlignment="Top" Margin="0,15,0,5"/>
                                    <TextBlock Text="Impresora de Tickets" TextAlignment="Center" 
                                              TextWrapping="Wrap" VerticalAlignment="Bottom" Margin="0,5,0,10"/>
                                </StackPanel>
                            </Button>
                            
                            <Button Width="120" Height="100" Margin="10"
                                   BorderThickness="1" BorderBrush="#CCCCCC" Background="White"
                                   IsEnabled="False">
                                <StackPanel>
                                    <TextBlock Text="📱" FontSize="24" HorizontalAlignment="Center" 
                                              VerticalAlignment="Top" Margin="0,15,0,5"/>
                                    <TextBlock Text="Lector de Códigos" TextAlignment="Center" 
                                              TextWrapping="Wrap" VerticalAlignment="Bottom" Margin="0,5,0,10"/>
                                </StackPanel>
                            </Button>
                            
                            <Button Width="120" Height="100" Margin="10"
                                   BorderThickness="1" BorderBrush="#CCCCCC" Background="White"
                                   IsEnabled="False">
                                <StackPanel>
                                    <TextBlock Text="💰" FontSize="24" HorizontalAlignment="Center" 
                                              VerticalAlignment="Top" Margin="0,15,0,5"/>
                                    <TextBlock Text="Cajón de Dinero" TextAlignment="Center" 
                                              TextWrapping="Wrap" VerticalAlignment="Bottom" Margin="0,5,0,10"/>
                                </StackPanel>
                            </Button>
                        </WrapPanel>
                        
                        <!-- Mantenimiento -->
                        <Border Background="#003366" Margin="0,10,0,0">
                            <TextBlock Text="Mantenimiento" FontWeight="Bold" FontSize="16" 
                                      Foreground="White" Margin="10,5"/>
                        </Border>
                        
                        <WrapPanel Margin="10">
                            <Button x:Name="btnRespaldo" Width="120" Height="100" Margin="10"
                                   BorderThickness="1" BorderBrush="#CCCCCC" Background="White"
                                   Click="btnRespaldo_Click">
                                <StackPanel>
                                    <TextBlock Text="💾" FontSize="24" HorizontalAlignment="Center" 
                                              VerticalAlignment="Top" Margin="0,15,0,5"/>
                                    <TextBlock Text="Respaldo Automático" TextAlignment="Center" 
                                              TextWrapping="Wrap" VerticalAlignment="Bottom" Margin="0,5,0,10"/>
                                </StackPanel>
                            </Button>
                        </WrapPanel>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Grid>
        
        <!-- Barra de estado -->
        <StatusBar Grid.Row="3">
            <StatusBarItem>
                <TextBlock x:Name="txtStatus" Text="Listo"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
